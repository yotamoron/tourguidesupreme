<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cruv.tourguidesupreme" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchTourResults"
            android:label="@string/title_activity_search_tour_results"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cruv.tourguidesupreme.MainActivity" />
        </activity>
        <activity
            android:name=".SearchGuideResults"
            android:label="@string/title_activity_search_guide_results"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cruv.tourguidesupreme.MainActivity" />
        </activity>
        <activity
            android:name=".Tour"
            android:label="@string/title_activity_tour"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cruv.tourguidesupreme.MainActivity" />
        </activity>
        <activity
            android:name=".Guide"
            android:label="@string/title_activity_guide"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cruv.tourguidesupreme.MainActivity" />
        </activity>
        <activity
            android:name=".Location"
            android:label="@string/title_activity_location"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cruv.tourguidesupreme.MainActivity" />
        </activity>
    </application>

</manifest>
